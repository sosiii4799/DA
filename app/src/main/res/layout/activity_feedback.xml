<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".activity.Comic.FeedbackActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSearch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorWhite">
        <ImageView
            android:padding="@dimen/dimen_10dp"
            android:id="@+id/img_qrorrfid"
            android:layout_gravity="start"
            android:layout_width="40dp"
            android:onClick="backPhanHoi"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/backcomic"/>
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/font_18sp"
            android:text="@string/PhanHoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_20dp"
        android:id="@+id/DanhGia"
        android:layout_below="@+id/toolbarSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sao1"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:src="@drawable/saoden"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"/>
        <ImageView
            android:id="@+id/sao2"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/saoden"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"/>
        <ImageView
            android:id="@+id/sao3"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/saoden"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"/>
        <ImageView
            android:id="@+id/sao4"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/saoden"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"/>
        <ImageView
            android:id="@+id/sao5"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/saoden"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_below="@id/DanhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp">
        <EditText
            android:id="@+id/PhanHoi"
            android:hint="@string/GuiPhanHoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/GuiPhanHoi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_margin="@dimen/dimen_20dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:background="@drawable/bg_blue"
        android:text="@string/PhanHoi"
        android:textColor="@color/colorWhite" />
</RelativeLayout>